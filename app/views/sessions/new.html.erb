<div class="log-form">

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= '<br>'.html_safe %>
      <%= error %>
    <% end %>
  <% end %>

  <h2>Sign In</h2>

  <form action="<%= session_url %>" method="post">
    <%= auth_token_input %>
    <label>
      Username
      <input type="text" name="user[username]" value="<%=@user.username%>">
    </label>
    <br>
    <label>
      Password
      <input type="password" name="user[password]">
    </label>
    <br>
    <input type="submit" value="Sign In">
  </form>
</div>
